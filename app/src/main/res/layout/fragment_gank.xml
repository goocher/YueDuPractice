<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.xes.yuedupractice.ui.fragment.GankFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/colorTabBg">

            <android.support.design.widget.TabLayout
                android:id="@+id/tl_gank_title"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                app:tabBackground="@drawable/ripple_tab_bg"
                app:tabIndicatorColor="@color/colorTabLine"
                app:tabSelectedTextColor="@color/colorTabTextCheck"
                app:tabTextColor="@color/colorTabTextNormal">

            </android.support.design.widget.TabLayout>

        </LinearLayout>

        <android.support.v4.view.ViewPager
            android:id="@+id/vp_gank_content"
            android:background="#fff2f4f5"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </android.support.v4.view.ViewPager>
    </LinearLayout>
</layout>
